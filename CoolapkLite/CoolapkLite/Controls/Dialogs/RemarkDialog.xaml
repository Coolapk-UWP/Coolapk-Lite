<ContentDialog
    x:Class="CoolapkLite.Controls.Dialogs.RemarkDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CoolapkLite.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Uid="/ContentDialog/RemarkDialog"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Closing="OnClosing"
    mc:Ignorable="d">
    <controls:StackPanelEx Spacing="4">
        <TextBox
            x:Name="UIDTextBox"
            Header="UID"
            Text="{x:Bind UID, Mode=TwoWay}" />
        <TextBox
            x:Name="RemarkTextBox"
            x:Uid="/ContentDialog/RemarkTextBox"
            Text="{x:Bind RemarkName, Mode=TwoWay}" />
    </controls:StackPanelEx>
</ContentDialog>
