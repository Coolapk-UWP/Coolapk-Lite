                                        </Storyboard>
                                    </VisualTransition>
                                    <VisualTransition From="Loaded" To="Loading">
                                        <Storyboard>
                                            <DoubleAnimation
                                                AutoReverse="False"
                                                BeginTime="0"
                                                Storyboard.TargetName="Image"
                                                Storyboard.TargetProperty="Opacity"
                                                From="1"
                                                To="0"
                                                Duration="{StaticResource ControlFastAnimationDuration}" />
                                            <DoubleAnimation
                                                AutoReverse="False"
                                                BeginTime="0"
                                                Storyboard.TargetName="PlaceholderImage"
                                                Storyboard.TargetProperty="Opacity"
                                                From="0"
                                                To="1"
                                                Duration="{StaticResource ControlFastAnimationDuration}" />
                                        </Storyboard>
                                    </VisualTransition>
                                </VisualStateGroup.Transitions>
                                <VisualState x:Name="Loading">
                                    <VisualState.Setters>
                                        <Setter Target="Image.Opacity" Value="0" />
                                        <Setter Target="PlaceholderImage.Opacity" Value="1" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Loaded">
                                    <VisualState.Setters>
                                        <Setter Target="Image.Opacity" Value="1" />
                                        <Setter Target="PlaceholderImage.Opacity" Value="0" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

