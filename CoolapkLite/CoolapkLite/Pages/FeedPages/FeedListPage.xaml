                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        FontSize="35"
                                        FontWeight="Bold"
                                        Text="{Binding OwnerScore}" />
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        FontSize="12"
