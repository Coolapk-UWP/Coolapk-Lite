<Page
    x:Class="CoolapkLite.Pages.FeedPages.FeedListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:control="using:CoolapkLite.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:feeds="using:CoolapkLite.ViewModels.FeedPages"
    xmlns:helpers="using:CoolapkLite.Helpers"
    xmlns:images="using:CoolapkLite.Models.Images"
    xmlns:local="using:CoolapkLite.Pages.FeedPages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:CoolapkLite.Models"
    xmlns:pages="using:CoolapkLite.Models.Pages"
    xmlns:templates="using:CoolapkLite.Controls.DataTemplates"
    xmlns:ui="using:Microsoft.Toolkit.Uwp.UI"
    d:DataContext="{d:DesignInstance Type=feeds:FeedListViewModel}"
    DataContext="{x:Bind Provider, Mode=OneWay}"
    NavigationCacheMode="Enabled"
    SizeChanged="Page_SizeChanged"
    mc:Ignorable="d">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <templates:FeedsTemplates />
                <templates:IndexCardTemplates />
                <templates:OtherCardTemplates />
            </ResourceDictionary.MergedDictionaries>
            <DataTemplate x:Key="UserDetailCard" x:DataType="pages:UserDetail">
                <Border>
                    <Border.Resources>
                        <MenuFlyout x:Key="MoreFlyout">
                            <MenuFlyoutItem
                                x:Name="MessageButton"
                                Click="Button_Click"
                                Tag="{x:Bind UID}"
                                Text="私信"
                                Visibility="{x:Bind IsMe, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter='true'}">
                                <helpers:FlyoutBaseHelper.Icon>
                                    <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE715;" />
                                </helpers:FlyoutBaseHelper.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem
                                x:Name="PinTileButton"
                                x:Uid="/Feed/PinTile"
                                Click="Button_Click"
                                Tag="{x:Bind}">
                                <helpers:FlyoutBaseHelper.Icon>
                                    <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE840;" />
                                </helpers:FlyoutBaseHelper.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem
                                x:Name="ReportButton"
                                x:Uid="/Feed/Report"
                                Click="Button_Click"
                                Tag="{x:Bind UID, Converter={StaticResource StringFormatConverter}, ConverterParameter='https://m.coolapk.com/mp/do?c=user&amp;m=report&amp;id={0}', Mode=OneWay}"
                                Visibility="{x:Bind IsMe, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter='true'}">
                                <helpers:FlyoutBaseHelper.Icon>
                                    <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE8F8;" />
                                </helpers:FlyoutBaseHelper.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutSubItem x:Uid="/FeedListPage/CoverMenuSubItem">
                                <helpers:FlyoutBaseHelper.Icon>
                                    <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE8B9;" />
                                </helpers:FlyoutBaseHelper.Icon>
                                <MenuFlyoutItem
                                    x:Name="RefreshButton"
                                    x:Uid="/ShowImagePage/RefreshMenuItem"
                                    Click="AppBarButton_Click"
                                    Tag="{x:Bind Cover}">
                                    <helpers:FlyoutBaseHelper.Icon>
                                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE72C;" />
                                    </helpers:FlyoutBaseHelper.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem
                                    x:Name="ShowImageButton"
                                    x:Uid="/ShowImagePage/ShowMenuItem"
                                    Click="AppBarButton_Click"
                                    Tag="{x:Bind Cover}">
                                    <helpers:FlyoutBaseHelper.Icon>
                                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE8A7;" />
                                    </helpers:FlyoutBaseHelper.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem
                                    x:Name="CopyButton"
                                    x:Uid="/ShowImagePage/CopyMenuItem"
                                    Click="AppBarButton_Click"
                                    Tag="{x:Bind Cover}">
                                    <helpers:FlyoutBaseHelper.Icon>
                                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE8C8;" />
                                    </helpers:FlyoutBaseHelper.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem
                                    x:Name="ShareButton"
                                    x:Uid="/ShowImagePage/ShareMenuItem"
                                    Click="AppBarButton_Click"
                                    Tag="{x:Bind Cover}">
                                    <helpers:FlyoutBaseHelper.Icon>
                                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE72D;" />
                                    </helpers:FlyoutBaseHelper.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem
                                    x:Name="SaveButton"
                                    x:Uid="/ShowImagePage/SaveMenuItem"
                                    Click="AppBarButton_Click"
                                    Tag="{x:Bind Cover}">
                                    <helpers:FlyoutBaseHelper.Icon>
                                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE74E;" />
                                    </helpers:FlyoutBaseHelper.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem
                                    x:Name="OriginButton"
                                    x:Uid="/ShowImagePage/OriginMenuItem"
                                    Click="AppBarButton_Click"
                                    Tag="{x:Bind Cover}"
                                    Visibility="{x:Bind Cover.IsSmallImage, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}">
                                    <helpers:FlyoutBaseHelper.Icon>
                                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xEB9F;" />
                                    </helpers:FlyoutBaseHelper.Icon>
                                </MenuFlyoutItem>
                            </MenuFlyoutSubItem>
                            <MenuFlyoutItem
                                x:Name="AnalyzeButton"
                                Click="Button_Click"
                                Tag="{x:Bind UID}"
                                Text="查看粉丝分析">
                                <helpers:FlyoutBaseHelper.Icon>
                                    <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE9D2;" />
                                </helpers:FlyoutBaseHelper.Icon>
                            </MenuFlyoutItem>
                        </MenuFlyout>
                    </Border.Resources>
                    <Grid
                        HorizontalAlignment="Stretch"
                        helpers:UIElementHelper.ContextFlyout="{StaticResource MoreFlyout}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CanDrag="True"
                        DragStarting="Image_DragStarting"
                        KeyDown="FrameworkElement_KeyDown"
                        Tag="{x:Bind Cover}"
                        Tapped="FrameworkElement_Tapped">
                        <Border>
                            <Border.Background>
                                <ImageBrush ImageSource="{x:Bind Cover.Pic, Mode=OneWay}" Stretch="UniformToFill" />
                            </Border.Background>
                        </Border>
                        <Grid
                            Padding="10"
                            helpers:UIElementHelper.ContextFlyout="{StaticResource MoreFlyout}"
                            Background="{ThemeResource TextOnAccentFillColorSecondaryBrush}">
                            <control:StackPanelEx Spacing="8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <control:PersonPicture
                                        Width="56"
                                        Height="56"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        DisplayName="{x:Bind UserName}"
                                        Source="{x:Bind UserAvatar}" />
                                    <Button
                                        x:Name="FollowButton"
                                        Grid.Column="1"
                                        HorizontalAlignment="Right"
                                        Click="Button_Click"
                                        Style="{StaticResource TransparentButtonStyle}"
                                        Tag="{x:Bind}"
                                        Tapped="Button_Tapped"
                                        ToolTipService.ToolTip="{x:Bind FollowStatus, Mode=OneWay}"
                                        Visibility="{x:Bind IsMe, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter='true'}">
                                        <StackPanel Orientation="Horizontal">
                                            <FontIcon
                                                VerticalAlignment="Center"
                                                FontFamily="{StaticResource SymbolThemeFontFamily}"
                                                FontSize="15"
                                                Glyph="{x:Bind FollowGlyph, Mode=OneWay}" />
                                            <TextBlock
                                                x:Name="FollowStatusText"
                                                Margin="8,0,0,0"
                                                VerticalAlignment="Center"
                                                Text="{x:Bind FollowStatus, Mode=OneWay}" />
                                        </StackPanel>
                                    </Button>
                                </Grid>
                                <Grid HorizontalAlignment="Left">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Grid.Column="0"
                                            HorizontalAlignment="Left"
                                            FontSize="12"
                                            FontStyle="Italic"
                                            Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                                            IsTextSelectionEnabled="{x:Bind IsCopyEnabled, Mode=OneWay}"
                                            Text="{x:Bind LevelNum, Converter={StaticResource StringFormatConverter}, ConverterParameter='Lv.{0}'}" />
                                        <TextBlock
                                            Grid.Column="1"
                                            HorizontalAlignment="Right"
                                            FontSize="12"
                                            IsTextSelectionEnabled="{x:Bind IsCopyEnabled, Mode=OneWay}"
                                            Text="{x:Bind NextLevelNowExperience}" />
                                    </Grid>
                                    <ProgressBar
                                        x:Name="NextLevelPercentageBar"
                                        Grid.Row="1"
                                        Width="160"
                                        Margin="0,4"
                                        Tag="/feed/18221454"
                                        Tapped="FrameworkElement_Tapped"
                                        Value="{x:Bind NextLevelPercentage}" />
                                </Grid>
                                <TextBlock
                                    IsTextSelectionEnabled="{x:Bind IsCopyEnabled, Mode=OneWay}"
                                    TextTrimming="CharacterEllipsis"
                                    Visibility="{x:Bind VerifyTitle, Converter={StaticResource StringVisibilityConverter}}">
                                    <Run
                                        FontFamily="{StaticResource SymbolThemeFontFamily}"
                                        Foreground="{ThemeResource CoolapkLogoForeground}"
                                        Text="&#xE10B;" />
                                    <Run Text="{x:Bind VerifyTitle}" />
                                </TextBlock>
                                <TextBlock
                                    IsTextSelectionEnabled="{x:Bind IsCopyEnabled, Mode=OneWay}"
                                    Text="{x:Bind Bio}"
                                    TextWrapping="WrapWholeWords"
                                    Visibility="{x:Bind Bio, Converter={StaticResource StringVisibilityConverter}}" />
                                <control:StackPanelEx Orientation="Horizontal" Spacing="6">
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        FontSize="16"
                                        IsTextSelectionEnabled="{x:Bind IsCopyEnabled, Mode=OneWay}">
                                        <Run FontWeight="Bold" Text="{x:Bind LikeNum}" />
                                        <Run x:Uid="/FeedListPage/LikeNum" FontWeight="Thin" />
                                    </TextBlock>
                                    <Button
                                        x:Name="FollowsButton"
                                        Padding="0"
                                        Background="{ThemeResource SystemControlTransparentBrush}"
                                        Click="Button_Click"
                                        FontSize="16"
                                        Tapped="Button_Tapped">
                                        <TextBlock>
                                            <Run FontWeight="Bold" Text="{x:Bind FollowNum}" />
                                            <Run x:Uid="/FeedListPage/FollowNum" FontWeight="Thin" />
                                        </TextBlock>
                                    </Button>
                                    <Button
                                        x:Name="FansButton"
                                        Padding="0"
                                        Background="{StaticResource SystemControlTransparentBrush}"
                                        Click="Button_Click"
                                        FontSize="16"
                                        Tapped="Button_Tapped">
                                        <TextBlock>
                                            <Run FontWeight="Bold" Text="{x:Bind FansNum}" />
                                            <Run x:Uid="/FeedListPage/FansNum" FontWeight="Thin" />
                                        </TextBlock>
                                    </Button>
                                    <TextBlock VerticalAlignment="Center" FontSize="16">
                                        <Run FontWeight="Bold" Text="{x:Bind FeedNum}" />
                                        <Run x:Uid="/FeedListPage/FeedsNum" FontWeight="Thin" />
                                    </TextBlock>
                                </control:StackPanelEx>
                                <control:StackPanelEx Orientation="Horizontal" Spacing="4">
                                    <Border
                                        Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        BorderThickness="1"
                                        Visibility="{x:Bind Gender, Converter={StaticResource StringVisibilityConverter}}">
                                        <TextBlock
                                            Margin="4,2"
                                            FontSize="12"
                                            IsTextSelectionEnabled="{x:Bind IsCopyEnabled, Mode=OneWay}"
                                            Text="{x:Bind Gender}" />
                                    </Border>
                                    <Border
                                        Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        BorderThickness="1"
                                        Visibility="{x:Bind City, Converter={StaticResource StringVisibilityConverter}}">
                                        <TextBlock
                                            Margin="4,2"
                                            FontSize="12"
                                            IsTextSelectionEnabled="{x:Bind IsCopyEnabled, Mode=OneWay}"
                                            Text="{x:Bind City}" />
                                    </Border>
                                    <Border
                                        Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        BorderThickness="1"
                                        Visibility="{x:Bind Astro, Converter={StaticResource StringVisibilityConverter}}">
                                        <TextBlock
                                            Margin="4,2"
                                            FontSize="12"
                                            IsTextSelectionEnabled="{x:Bind IsCopyEnabled, Mode=OneWay}"
                                            Text="{x:Bind Astro}" />
                                    </Border>
                                    <Border
                                        Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        BorderThickness="1"
                                        Visibility="{x:Bind BlockStatus, Converter={StaticResource StringVisibilityConverter}}">
                                        <TextBlock
                                            Margin="4,2"
                                            FontSize="12"
                                            IsTextSelectionEnabled="{x:Bind IsCopyEnabled, Mode=OneWay}"
                                            Text="{x:Bind BlockStatus}" />
                                    </Border>
                                </control:StackPanelEx>
                            </control:StackPanelEx>
                        </Grid>
                    </Grid>
                </Border>
            </DataTemplate>
            <DataTemplate x:Key="TopicDetailCard" x:DataType="pages:TopicDetail">
                <Border
                    Padding="10"
                    HorizontalAlignment="Stretch"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1">
                    <Border.Resources>
                        <MenuFlyout x:Key="MoreFlyout">
                            <MenuFlyoutItem
                                x:Name="PinTileButton"
                                x:Uid="/Feed/PinTile"
                                Click="Button_Click"
                                Tag="{x:Bind}">
                                <helpers:FlyoutBaseHelper.Icon>
                                    <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE840;" />
                                </helpers:FlyoutBaseHelper.Icon>
                            </MenuFlyoutItem>
                        </MenuFlyout>
                    </Border.Resources>
                    <control:StackPanelEx
                        helpers:UIElementHelper.ContextFlyout="{StaticResource MoreFlyout}"
                        Background="{ThemeResource SystemControlTransparentBrush}"
                        Spacing="8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <control:ImageControl
                                Width="56"
                                Height="56"
                                HorizontalAlignment="Left"
                                Source="{x:Bind Logo}" />
                            <control:StackPanelEx Grid.Column="1" Margin="8,0">
                                <TextBlock
                                    FontSize="16"
                                    FontWeight="SemiBold"
                                    IsTextSelectionEnabled="{x:Bind IsCopyEnabled, Mode=OneWay}"
                                    Text="{x:Bind Title}" />
                                <TextBlock
                                    FontSize="12"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    IsTextSelectionEnabled="{x:Bind IsCopyEnabled, Mode=OneWay}">
                                    <Run Text="{x:Bind HotNum}" />
                                    <Run Text="{x:Bind CommentNum}" />
                                </TextBlock>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <ItemsControl ItemsSource="{x:Bind FollowUsers}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <control:StackPanelEx
                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Stretch"
                                                    Orientation="Horizontal"
                                                    Spacing="-6" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate x:DataType="models:ISourceUserModel">
                                                <control:PersonPicture
                                                    Width="16"
                                                    Height="16"
                                                    DisplayName="{x:Bind UserName}"
                                                    KeyDown="FrameworkElement_KeyDown"
                                                    Source="{x:Bind UserAvatar}"
                                                    Tag="{x:Bind Url}"
                                                    Tapped="FrameworkElement_Tapped"
                                                    ToolTipService.ToolTip="{x:Bind UserName}" />
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                    <TextBlock
                                        Grid.Column="1"
                                        Margin="4,0"
                                        FontSize="12"
                                        IsTextSelectionEnabled="{x:Bind IsCopyEnabled, Mode=OneWay}"
                                        Text="{x:Bind FollowNum}" />
                                </Grid>
                            </control:StackPanelEx>
                            <Button
                                x:Name="FollowButton"
                                Grid.Column="2"
                                Height="32"
                                HorizontalAlignment="Right"
                                Background="{ThemeResource SystemControlTransparentBrush}"
                                Click="Button_Click"
                                Tag="{x:Bind}"
                                Tapped="Button_Tapped"
                                ToolTipService.ToolTip="{x:Bind FollowStatus, Mode=OneWay}">
                                <StackPanel Orientation="Horizontal">
                                    <FontIcon
                                        VerticalAlignment="Center"
                                        FontFamily="{StaticResource SymbolThemeFontFamily}"
                                        FontSize="15"
                                        Glyph="{x:Bind FollowGlyph, Mode=OneWay}" />
                                    <TextBlock
                                        x:Name="FollowStatusText"
                                        Margin="8,0,0,0"
                                        VerticalAlignment="Center"
                                        Text="{x:Bind FollowStatus, Mode=OneWay}" />
                                </StackPanel>
                            </Button>
                        </Grid>
                        <TextBlock
                            IsTextSelectionEnabled="{x:Bind IsCopyEnabled, Mode=OneWay}"
                            Text="{x:Bind Description}"
                            TextWrapping="WrapWholeWords"
                            Visibility="{x:Bind Description, Converter={StaticResource StringVisibilityConverter}}" />
                        <TextBlock
                            IsTextSelectionEnabled="{x:Bind IsCopyEnabled, Mode=OneWay}"
                            Text="{x:Bind SubTitle}"
                            TextWrapping="WrapWholeWords"
                            Visibility="{x:Bind SubTitle, Converter={StaticResource StringVisibilityConverter}}" />
                    </control:StackPanelEx>
                </Border>
            </DataTemplate>
            <DataTemplate x:Key="DyhDetailCard" x:DataType="pages:DyhDetail">
                <Border
                    Padding="10"
                    HorizontalAlignment="Stretch"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1">
                    <Border.Resources>
                        <MenuFlyout x:Key="MoreFlyout">
                            <MenuFlyoutItem
                                x:Name="PinTileButton"
                                x:Uid="/Feed/PinTile"
                                Click="Button_Click"
                                Tag="{x:Bind}">
                                <helpers:FlyoutBaseHelper.Icon>
                                    <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE840;" />
                                </helpers:FlyoutBaseHelper.Icon>
                            </MenuFlyoutItem>
                        </MenuFlyout>
                    </Border.Resources>
                    <control:StackPanelEx
                        helpers:UIElementHelper.ContextFlyout="{StaticResource MoreFlyout}"
                        Background="{ThemeResource SystemControlTransparentBrush}"
                        Spacing="8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <control:ImageControl
                                Width="56"
                                Height="56"
                                HorizontalAlignment="Left"
                                Source="{x:Bind Logo}" />
                            <StackPanel Grid.Column="1" Margin="8,0">
                                <TextBlock
                                    FontSize="16"
                                    FontWeight="SemiBold"
                                    IsTextSelectionEnabled="{x:Bind IsCopyEnabled, Mode=OneWay}"
                                    Text="{x:Bind Title}" />
                                <TextBlock
                                    FontSize="12"
                                    FontWeight="Thin"
                                    IsTextSelectionEnabled="{x:Bind IsCopyEnabled, Mode=OneWay}"
                                    Text="{x:Bind FollowNum, Mode=OneWay}" />
                                <Grid
                                    Background="{ThemeResource SystemControlTransparentBrush}"
                                    KeyDown="FrameworkElement_KeyDown"
                                    Tag="{x:Bind Uurl}"
                                    Tapped="FrameworkElement_Tapped">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <control:PersonPicture
                                        Width="16"
                                        Height="16"
                                        DisplayName="{x:Bind UserName}"
                                        Source="{x:Bind UserAvatar}" />
                                    <TextBlock
                                        Grid.Column="1"
                                        Margin="4,0"
                                        FontSize="12"
                                        IsTextSelectionEnabled="{x:Bind IsCopyEnabled, Mode=OneWay}"
                                        Text="{x:Bind UserName}" />
                                </Grid>
                            </StackPanel>
                            <Button
                                x:Name="FollowButton"
                                Grid.Column="2"
                                Height="32"
                                HorizontalAlignment="Right"
                                Background="{ThemeResource SystemControlTransparentBrush}"
                                Click="Button_Click"
                                Tag="{x:Bind}"
                                Tapped="Button_Tapped"
                                ToolTipService.ToolTip="{x:Bind FollowStatus, Mode=OneWay}">
                                <StackPanel Orientation="Horizontal">
                                    <FontIcon
                                        VerticalAlignment="Center"
                                        FontFamily="{StaticResource SymbolThemeFontFamily}"
                                        FontSize="15"
                                        Glyph="{x:Bind FollowGlyph, Mode=OneWay}" />
                                    <TextBlock
                                        x:Name="FollowStatusText"
                                        Margin="8,0,0,0"
                                        VerticalAlignment="Center"
                                        Text="{x:Bind FollowStatus, Mode=OneWay}" />
                                </StackPanel>
                            </Button>
                        </Grid>
                        <TextBlock
                            IsTextSelectionEnabled="{x:Bind IsCopyEnabled, Mode=OneWay}"
                            Text="{x:Bind Description}"
                            TextWrapping="WrapWholeWords"
                            Visibility="{x:Bind Description, Converter={StaticResource StringVisibilityConverter}}" />
                    </control:StackPanelEx>
                </Border>
            </DataTemplate>
            <DataTemplate x:Key="ProductDetailCard" x:DataType="pages:ProductDetail">
                <control:StackPanelEx Spacing="2">
                    <Grid
                        HorizontalAlignment="Stretch"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        Visibility="{x:Bind CoverArr, Converter={StaticResource CollectionVisibilityConverter}}">
                        <FlipView
                            x:Name="FlipView"
                            Background="{ThemeResource SystemControlTransparentBrush}"
                            ItemsSource="{x:Bind CoverArr}"
                            Loaded="FlipView_Loaded"
                            SizeChanged="FlipView_SizeChanged">
                            <FlipView.ItemTemplate>
                                <DataTemplate x:DataType="images:ImageModel">
                                    <control:ImageControl
                                        x:Name="Picture"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        CanDrag="True"
                                        DragStarting="Image_DragStarting"
                                        KeyDown="FrameworkElement_KeyDown"
                                        Source="{x:Bind}"
                                        Stretch="UniformToFill"
                                        Style="{StaticResource ImageBrushImageControlStyle}"
                                        Tag="{x:Bind}"
                                        Tapped="FrameworkElement_Tapped">
                                        <helpers:UIElementHelper.ContextFlyout>
                                            <MenuFlyout>
                                                <MenuFlyoutItem
                                                    x:Name="RefreshButton"
                                                    x:Uid="/ShowImagePage/RefreshMenuItem"
                                                    Click="AppBarButton_Click"
                                                    Tag="{x:Bind}">
                                                    <helpers:FlyoutBaseHelper.Icon>
                                                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE72C;" />
                                                    </helpers:FlyoutBaseHelper.Icon>
                                                </MenuFlyoutItem>
                                                <MenuFlyoutItem
                                                    x:Name="CopyButton"
                                                    x:Uid="/ShowImagePage/CopyMenuItem"
                                                    Click="AppBarButton_Click"
                                                    Tag="{x:Bind}">
                                                    <helpers:FlyoutBaseHelper.Icon>
                                                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE8C8;" />
                                                    </helpers:FlyoutBaseHelper.Icon>
                                                </MenuFlyoutItem>
                                                <MenuFlyoutItem
                                                    x:Name="ShareButton"
                                                    x:Uid="/ShowImagePage/ShareMenuItem"
                                                    Click="AppBarButton_Click"
                                                    Tag="{x:Bind}">
                                                    <helpers:FlyoutBaseHelper.Icon>
                                                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE72D;" />
                                                    </helpers:FlyoutBaseHelper.Icon>
                                                </MenuFlyoutItem>
                                                <MenuFlyoutItem
                                                    x:Name="SaveButton"
                                                    x:Uid="/ShowImagePage/SaveMenuItem"
                                                    Click="AppBarButton_Click"
                                                    Tag="{x:Bind}">
                                                    <helpers:FlyoutBaseHelper.Icon>
                                                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE74E;" />
                                                    </helpers:FlyoutBaseHelper.Icon>
                                                </MenuFlyoutItem>
                                                <MenuFlyoutItem
                                                    x:Name="OriginButton"
                                                    x:Uid="/ShowImagePage/OriginMenuItem"
                                                    Click="AppBarButton_Click"
                                                    Tag="{x:Bind}"
                                                    Visibility="{x:Bind IsSmallImage, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}">
                                                    <helpers:FlyoutBaseHelper.Icon>
                                                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xEB9F;" />
                                                    </helpers:FlyoutBaseHelper.Icon>
                                                </MenuFlyoutItem>
                                            </MenuFlyout>
                                        </helpers:UIElementHelper.ContextFlyout>
                                    </control:ImageControl>
                                </DataTemplate>
                            </FlipView.ItemTemplate>
                        </FlipView>
                    </Grid>
                    <Grid
                        Padding="10"
                        HorizontalAlignment="Stretch"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1">
                        <control:StackPanelEx Spacing="8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
